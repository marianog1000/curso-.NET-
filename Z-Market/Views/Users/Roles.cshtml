@model Z_Market.ViewModels.UserView
@{
    ViewBag.Title = "Roles";
}

<h2>Roles for user: @Model.Name </h2>

<p>
    @Html.ActionLink("Add Role", "AddRole", new { userID = Model.UserID}, new { @class = "btn btn-primary" })
    @Html.ActionLink("Return to Users", "Index", new { },new { @class = "btn btn-info" })
</p>
<table class="table">

    @*foreach cuando hay un icollection arriba
    sino se usa for*@


    @for (int i = 0; i < Model.Roles.Count; i++)
    {
      <tr>
            <td>
                @Html.DisplayFor(modelItem => Model.Roles[i].Name)
            </td>
            <td>
                @Html.ActionLink("Delete", "Delete", new { userID = Model.UserID, roleID = Model.Roles[i].RoleID})
            </td>
        </tr>
    }

</table>
